echo "Compiling: main.c to hiddenstar"
gcc -std=c99 -Wall -g -c main.c user_events.c audio.c gui.c menu.c intro.c planets.c starmap.c combat.c comms.c factions.c util/vector.c -lSDL2_image -lSDL2_mixer `sdl2-config --cflags`
gcc -std=c99 -Wall -o hiddenstar main.o user_events.o audio.o gui.o menu.o intro.o planets.o starmap.o combat.o comms.o factions.o vector.o -lSDL2_image -lSDL2_mixer `sdl2-config --libs` -lm
